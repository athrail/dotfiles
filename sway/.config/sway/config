# sway config

### Variables
set $mod Mod4
set $left h
set $down j
set $up k
set $right l
set $term foot
# set $menu rofi -show drun
set $menu fuzzel
set $config_dir ~/.config/sway
set $browser helium

### Output configuration
# Simple static wallpaper with swaybg
output * bg ~/Pictures/1.jpg fill

# For multiple monitors:
# output HDMI-A-1 resolution 1920x1080 position 1920,0

### Idle configuration
exec swayidle -w \
    timeout 300 'swaymsg "output * dpms off"' \
    resume 'swaymsg "output * dpms on" && gtklock' \
    before-sleep 'gtklock'

### Input configuration
input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

input type:keyboard {
    xkb_layout "pl"
    xkb_options caps:escape
    repeat_delay 300
    repeat_rate 50
}

### Key bindings
# Basics
bindsym $mod+Return exec $term
bindsym $mod+q kill
bindsym $mod+space exec $menu
bindsym $mod+Shift+r reload
bindsym $mod+Shift+x exec swaymsg exit
bindsym $mod+Shift+b exec $browser
bindsym $mod+Escape exec bash ~/.scripts/power_menu.sh
bindsym $mod+Shift+i exec bash ~/.scripts/hp_change_source.sh
bindsym $mod+x exec gtklock
floating_modifier $mod normal

# Movement
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Move focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

# Workspaces
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Layout
default_orientation horizontal
bindsym Ctrl+Shift+1 layout splith; border pixel 2
bindsym Ctrl+Shift+2 layout splitv; border pixel 2
bindsym Ctrl+Shift+3 layout tabbed; border normal 2
bindsym Ctrl+Shift+4 layout stacking; border normal 2
bindsym Ctrl+Shift+5 layout toggle split; border pixel 2
bindsym $mod+b splitt
bindsym $mod+f fullscreen
bindsym $mod+g floating toggle
bindsym $mod+Shift+g focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+Shift+p exec $config_dir/scripts/sway-layout-menu.sh

# Resize
bindsym $mod+Ctrl+$left resize shrink width 10px
bindsym $mod+Ctrl+$down resize grow height 10px
bindsym $mod+Ctrl+$up resize shrink height 10px
bindsym $mod+Ctrl+$right resize grow width 10px

# Screenshot utilities
bindsym $mod+s exec grim ~/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png && notify-send "ðŸ“¸ Screenshot saved to ~/Screenshots"
# bindsym Shift+Print exec grim -g "$(slurp)" - | wl-copy && notify-send "ðŸ“‹ Screenshot copied to clipboard"
bindsym $mod+Shift+s exec grim -g "$(slurp)" ~/Screenshots/$(date +%Y-%m-%d_%H-%M-%S).png && notify-send "ðŸ“¸ Screenshot saved to ~/Screenshots"

# Media keys
bindsym XF86AudioRaiseVolume exec $config_dir/scripts/changevolume up
bindsym XF86AudioLowerVolume exec $config_dir/scripts/changevolume down
bindsym XF86AudioMute exec $config_dir/scripts/changevolume mute
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Volume control (custom bindings)
bindsym XF86MonBrightnessUp exec bash ~/.scripts/brightness_control.sh +5
bindsym XF86MonBrightnessDown exec bash ~/.scripts/brightness_control.sh -5
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Notification center
bindsym $mod+Shift+n exec swaync-client -t
bindsym $mod+Shift+v exec cliphist list | fuzzel --dmenu | cliphist decode | wl-copy

# Show keybindings help
bindsym $mod+slash exec $config_dir/scripts/help

# Audio mixer
bindsym $mod+Shift+a exec foot --title=wiremix --app-id=wiremix wiremix

# Applications
bindsym $mod+Shift+f exec thunar
bindsym $mod+Ctrl+s sticky toggle

### Appearance
# Font for window titles/tabs
font pango:IosevkaTermNF 12

# Borders
default_border normal
default_floating_border normal
titlebar_padding 15 4
gaps inner 10
gaps outer 0

# Rose Pine Theme for Sway WM
# Set the colors using the Rose Pine palette
set $base #191724
set $surface #1f1d2e
set $overlay #26233a
set $muted #6e6a86
set $subtle #908caa
set $text #e0def4
set $love #eb6f92
set $gold #f6c177
set $rose #ebbcba
set $pine #31748f
set $foam #9ccfd8
set $iris #c4a7e7
set $highlight_low #21202e
set $highlight_med #403d52
set $highlight_high #524f67

# Window colors
# class                 border          backgr     text    indicator    child_border
client.focused          $foam           $overlay   $text   $gold        $foam
client.focused_inactive $muted          $overlay   $text   $overlay     $muted
client.unfocused        $highlight_low  $overlay   $text   $overlay     $highlight_low
client.placeholder      $highlight_med  $overlay   $text   $overlay     $highlight_med

### Startup applications
#exec_always autotiling
exec_always bash -c "killall -q swaync; while pgrep -x swaync >/dev/null; do sleep 0.1; done; swaync -c ~/.config/sway/swaync/config.json -s ~/.config/sway/swaync/style.css"
# exec blueman-applet
exec lxpolkit
exec gsettings set org.gnome.desktop.interface color-scheme "prefer-dark" # for GTK4 apps

# Clipboard history
exec wl-paste --watch cliphist store

# Status bar - launch waybar on startup
exec_always bash -c "killall -q waybar; while pgrep -x waybar >/dev/null; do sleep 0.1; done; waybar"

### App-specific settings
# Float
for_window [app_id="mpv"] floating enable, move position center, border normal
for_window [app_id="wiremix"] floating enable, move position center, border normal
for_window [app_id="bluetui"] floating enable, move position center, border normal
for_window [class="mpv"] floating enable, move position center, border normal
for_window [app_id="eog"] floating enable, move position center, border normal
for_window [class="Eog"] floating enable, move position center, border normal
for_window [app_id="galculator"] floating enable, move position center, border normal
for_window [class="Galculator"] floating enable, move position center, border normal
for_window [app_id="transmission-gtk"] floating enable, move position center, border normal
for_window [class="Transmission-gtk"] floating enable, move position center, border normal
for_window [app_id="nwg-look"] floating enable, move position center, border normal
for_window [app_id="pavucontrol"] floating enable, move position center, border normal
for_window [app_id="blueman-manager"] floating enable, move position center, border normal

# Thunar - uncomment to make all thunar windows float (dialogs don't have distinguishable properties)
# for_window [app_id="thunar"] floating enable, move position center

# Generic floating rules
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="dialog"] floating enable
for_window [window_type="dialog"] floating enable

# Inhibit idle for fullscreen apps
for_window [class=".*"] inhibit_idle fullscreen
for_window [app_id=".*"] inhibit_idle fullscreen

### Workspace assignments
# assign [class="discord"] workspace number 8
# assign [app_id="discord"] workspace number 8
# assign [class="Gimp"] workspace number 9
# assign [app_id="gimp"] workspace number 9
# assign [class="obs"] workspace number 10
# assign [app_id="com.obsproject.Studio"] workspace number 10

#include /etc/sway/config.d/*
# Import environment variables for systemd and D-Bus services
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP PATH
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK XDG_CURRENT_DESKTOP PATH
